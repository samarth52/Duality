{
  "manifest_version": 3,
  "name": "Duality",
  "version": "1.0",
  "description": "The browser extension that broadens your news perspective.",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js",
        "scripts/fetch_secret.js"
      ],
      "matches": [
        "https://*/*",
        "http://localhost:3000/dashboard"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "permissions": ["identity", "storage"],
  "web_accessible_resources": [
    {
      "resources": [ "images/duality_icon.png" ],
      "matches": [ "https://*/*" ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "oauth2": {
    "client_id": "962840843955-h5n0kbf33277h1cotepr8bd550fvtgot.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
}
